# OpenRouter API for chat completions (https://openrouter.ai/keys)
# Provides access to 100+ models including free options
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key

# OpenRouter model (format: provider/model-name)
# Free models: meta-llama/llama-3.1-8b-instruct:free, google/gemma-2-9b-it:free
# Paid models: openai/gpt-4o-mini, anthropic/claude-3-haiku, meta-llama/llama-3.1-70b-instruct
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# Cohere API for embeddings (https://dashboard.cohere.com/api-keys)
# Free tier includes 1,000 API calls/month
COHERE_API_KEY=your-cohere-api-key
COHERE_EMBED_MODEL=embed-english-v3.0

# OpenAI API (optional - not needed if using Cohere for embeddings)
OPENAI_API_KEY=sk-your-openai-api-key

# Qdrant Cloud vector database
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_URL=https://your-cluster.qdrant.io

# Neon Serverless PostgreSQL
NEON_DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Anthropic API for Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Environment (development, staging, production)
ENVIRONMENT=development

# JWT Secret for authentication (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
# If not set, a random secret will be generated on each server restart
JWT_SECRET=your-secure-jwt-secret-key
